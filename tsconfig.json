{
    "compilerOptions": {
        "target": "ESNext",
        "useDefineForClassFields": true,
        "lib": [
            "DOM",
            "DOM.Iterable",
            "ESNext"
        ],
        "allowJs": false,
        "skipLibCheck": true,
        "esModuleInterop": false,
        "allowSyntheticDefaultImports": true,
        "strict": true,
        "forceConsistentCasingInFileNames": true,
        "module": "ESNext",
        "moduleResolution": "Node",
        "resolveJsonModule": true,
        "isolatedModules": true,
        "noEmit": true,
        "jsx": "react-jsx",
        "baseUrl": "./",
        "paths": {
            "pages/*": [
                "src/pages/*"
            ],
            "components/*": [
                "src/components/*"
            ],
            "lib/*": [
                "src/lib/*"
            ],
            "base/*": [
                "src/base/*"
            ],
            "hocs/*": [
                "src/hocs/*"
            ],
            "contexts/*": [
                "src/contexts/*"
            ],
            "hooks/*": [
                "src/hooks/*"
            ]
        }
    },
    "include": [
        "./"
    ],
    "references": [
        {
            "path": "./tsconfig.node.json"
        }
    ]
}